{
  "instructions": ["CLAUDE.md"],
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": true,
  "share": "disabled",
  "small_model": "google/gemini-3-flash-preview",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest", "--no-usage-statistics" ]
    },
    "stitch": {
      "type": "local",
      "command": ["npx", "-y", "@_davideast/stitch-mcp", "proxy"],
      "enabled": true,
      "environment": {
        "STITCH_API_KEY": "{env:STITCH_API_KEY}"
      }
    },
    "shadcn": {
      "type": "local",
      "command": [
        "npx",
        "shadcn@latest",
        "mcp"
      ],
      "enabled": true
    }
  },
  "plugin": ["opencode-mem"]
}
